<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="default">
        <class>org.motorsportstatscore.entity.Notificacao</class>
        <class>org.motorsportstatscore.entity.NotificacaoUtilizador</class>
        <class>org.motorsportstatscore.entity.Utilizador</class>
        <class>org.motorsportstatscore.entity.TipoUtilizador</class>
        <class>org.motorsportstatscore.entity.Favorito</class>
        <class>org.motorsportstatscore.entity.Competicao</class>
        <class>org.motorsportstatscore.entity.TipoCompeticao</class>
        <class>org.motorsportstatscore.entity.ResultadoPilotoId</class>
        <class>org.motorsportstatscore.entity.PilotoFavoritoId</class>
        <class>org.motorsportstatscore.entity.NotificacaoUtilizadorId</class>
        <class>org.motorsportstatscore.entity.EquipaFavoritoId</class>
        <class>org.motorsportstatscore.entity.EquipaCompeticaoId</class>
        <class>org.motorsportstatscore.entity.Equipa</class>
        <class>org.motorsportstatscore.entity.CorridaVolta</class>
        <class>org.motorsportstatscore.entity.CorridaStage</class>
        <class>org.motorsportstatscore.entity.CompeticaoFavoritoId</class>
        <class>org.motorsportstatscore.entity.Resultado</class>
        <class>org.motorsportstatscore.entity.ResultadoPiloto</class>
        <class>org.motorsportstatscore.entity.CompeticaoFavorito</class>
        <class>org.motorsportstatscore.entity.Corrida</class>
        <class>org.motorsportstatscore.entity.EquipaCompeticao</class>
        <class>org.motorsportstatscore.entity.EquipaFavorito</class>
        <class>org.motorsportstatscore.entity.Piloto</class>
        <class>org.motorsportstatscore.entity.PilotoFavorito</class>

        <!-- Configurações de propriedades -->
        <properties>
            <!-- Configuração de conexão com o banco de dados -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Projeto"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1893"/>
            <property name="hibernate.show_sql" value="true"/>

            <!-- Configurações do provedor JPA (Hibernate, EclipseLink, etc.) -->
            <property name="jakarta.persistence.provider" value="org.hibernate.jpa.HibernatePersistenceProvider"/>

            <!-- Configurações específicas do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
